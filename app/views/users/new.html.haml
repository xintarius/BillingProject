= form_for @user, url: users_path, method: :post do |f|
  = f.label t('views.datagrid.users.new.email')
  = f.text_field :email
  = f.label t('views.datagrid.users.new.password')
  = f.password_field :password
  = f.label t('views.datagrid.users.new.role')
  = f.text_field :role_id
  = f.submit t('views.datagrid.users.new.add')